extends layout

block content
  div.col-md-offset-3.col-md-6.col-md-offset-3
    form.form-horizontal(method="post", id="loginForm", role='form')
      div.form-group
        label.col-sm-3.control-label(for='email') Email/User:
        div.col-sm-7
          input.form-control(id='email',type="email", placeholder="email/user")

      div.form-group
        label.col-sm-3.control-label(for='password') Password:
        div.col-sm-7
          input.form-control(id="password", type="password", placeholder='password')

      div.form-group
        div.col-sm-offset-3.col-sm-4
          div.checkbox
            input(type='checkbox')
            p Remenber me

      div.form-group
        div.col-sm-offset-3.col-sm-4
          button.btn.btn-default(type='submit') Sing in