extends layout


block links

block content
  
  <!-- Usar la propiedad 'title' para renderizar un título de página  -->
  title= title

  <!-- Si un usuario es autentificado, mostrar el nombre completo del usuario, de no ser así mostrar los enlaces de autentificación -->
  -if (user)
    a(href='/signout') Cerrar Sesión
  -else
    a(href='/signup') Crear Cuenta
    a(href='/signin') Identificarse
  
  section(ng-view)
  script.
    window.user = #{user || 'null'} ;

block scripts
  script(src='/lib/angular/angular.js')
  script(src='/lib/angular-route/angular-route.js')
  script(src='/app/example.client.module.js')
  script(src='/app/controllers/example.client.controller.js')
  script(src='/app/routes/example.client.route.js')
  script(src='/app/module/user/user.client.module.js')
  script(src='/app/module/user/services/authentication.client.service.js')
  script(src='/application.js')
    
      
